<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- sulu-admin -->
        <service id="sulu_activity_log.admin" class="Sulu\Bundle\ActivityLogBundle\Admin\ActivityLogAdmin" public="false">
            <argument>%sulu_admin.name%</argument>

            <tag name="sulu.admin"/>
            <tag name="sulu.context" context="admin"/>
        </service>
        <service id="sulu_activity_log.crate_activity_log_storage" class="Sulu\Bundle\ActivityLogBundle\Storage\CrateActivityLogStorage">
            <argument type="service" id="doctrine"/>
        </service>
    </services>
</container>
